doctype html
html(lang='en')
    include ../common/head.pug
    +head("Powiązania")
    body
        header
            include ../common/navbar.pug
            +navbar()
        .everything
            .row.align-items-center
                .col-md-12.order-md-1.text-center.text-md-left.pr-md-5
                    h1.text-center Powiązania
                    table.table
                        thead
                            tr
                                th(scope="col")
                                    h2 Nazwa
                                th(scope="col")
                                    h2 Opis
                                th(scope="col")
                                    h2 Cena
                                th(scope="col")
                                    h2 Wymiary
                                    h5 (dł. x szer. x wys)
                                th(scope="col")
                                    h2 EAN
                                th(scope="col")
                                    h2 Kategoria
                                th(scope="col")
                                    h2 Akcje
                                th(scope="col")
                                    a(href="./powiazanie").check3.btn.btn-primary.m-3 Dodaj
                            tr
                        tbody
                            for powiazanie in powiazanies
                                for powiazania_produkt in powiazania_produkties
                                    tr(id=powiazanie.id)
                                        td
                                            h5
                                                span #{powiazania_produkt.id}
                                        td
                                            h5
                                                span #{powiazanie.id}
                                        td
                                            h5
                                                span #{powiazanie.id} zł
                                        td
                                            h5
                                                span #{powiazanie.id} (mm)
                                        td
                                            h5
                                                span #{powiazanie.id}
                                        td
                                            h5
                                                span #{powiazanie.id}
                                        td
                                            a(href="/powiazanie/"+powiazanie.id).check2.btn.btn-primary Więcej
                                        td
                                            button(onclick=`usunPowiazanie('${powiazanie.id}')`).btn.btn-primary Usuń
        include ../common/footer.pug
        +footer()
        script(src='/javascripts/powiazanie.js')
